<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.LoginAndRegister" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/bottom_nav_selected_item</item>
        <!-- Customize your theme here. -->
    </style>
    
    <style name="ButtonCoklat">
        <item name="android:background">@drawable/roundstyle</item>
        <item name="android:backgroundTint">@color/barn_red</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="ButtonGrey">
        <item name="android:background">@drawable/roundstyle</item>
        <item name="android:backgroundTint">@color/dark_grey</item>
        <item name="android:enabled">false</item>
        <item name="android:textColor">@color/white</item>
    </style>
</resources>