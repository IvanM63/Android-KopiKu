<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    tools:context=".fragments.homepage.DetailItemFragment"
    android:background="#FBFBFB"
    >

    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/detail_back_button"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="-8dp"
        app:navigationIcon="@drawable/ic_arrow_back_left" />

    <ImageView
        android:id="@+id/detail_img"
        android:layout_width="match_parent"
        android:layout_height="500dp"
        android:scaleType="fitXY"
        android:layout_below="@+id/detail_back_button"
        android:src="@mipmap/kopi1" />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <View
            android:id="@+id/detail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginTop="456dp"
            android:background="@drawable/roundstyle"
            android:backgroundTint="@color/white" />

        <TextView
            android:id="@+id/detail_judul"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="19dp"
            android:layout_marginTop="475dp"
            android:gravity="top"
            android:lineSpacingExtra="-2sp"
            android:text="Arabica Coffee"
            android:textColor="#000000"
            android:textSize="23sp"
            android:fontFamily="@font/nbold" />

        <TextView
            android:id="@+id/detail_harga"
            android:layout_width="138dp"
            android:layout_height="25dp"
            android:layout_marginLeft="19dp"
            android:layout_marginTop="510dp"
            android:gravity="top"
            android:lineSpacingExtra="-2sp"
            android:text="Rp. 50.000"
            android:textColor="#000000"
            android:textSize="20sp"
            android:fontFamily="@font/nbold" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="19dp"
                android:layout_marginTop="540dp"
                android:background="@drawable/ic_baseline_star_24" />
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="540dp"
                android:background="@drawable/ic_baseline_star_24" />
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="540dp"
                android:background="@drawable/ic_baseline_star_24" />
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="540dp"
                android:background="@drawable/ic_baseline_star_24" />
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="540dp"
                android:background="@drawable/ic_baseline_star_24" />
            <TextView
                android:fontFamily="@font/nmedium"
                android:id="@+id/ulas"
                android:layout_width="170dp"
                android:layout_height="25dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="540dp"
                android:gravity="top"
                android:lineSpacingExtra="-2sp"
                android:text="4.8 (1.3K Ulasan)"
                android:textColor="#000000"
                android:textSize="16sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/des"
                android:layout_width="wrap_content"
                android:layout_height="25dp"
                android:layout_marginLeft="19dp"
                android:layout_marginTop="575dp"
                android:gravity="top"
                android:lineSpacingExtra="-2sp"
                android:text="Deskripsi"
                android:textColor="#000000"
                android:textSize="20sp"
                android:fontFamily="@font/nbold" />

            <TextView
                android:fontFamily="@font/nmedium"
                android:id="@+id/penilaian"
                android:layout_width="wrap_content"
                android:layout_height="25dp"
                android:layout_marginTop="575dp"
                android:layout_marginLeft="10dp"
                android:gravity="top"
                android:lineSpacingExtra="-2sp"
                android:text="Penilaian"
                android:textColor="#000000"
                android:textSize="20sp" />


        </LinearLayout>


        <TextView
            android:fontFamily="@font/nmedium"
            android:id="@+id/detail_desc"
            android:layout_width="360dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="19dp"
            android:layout_marginTop="620dp"
            android:gravity="top"
            android:lineSpacingExtra="-2sp"
            android:text="Kopi arabika dikenal sebagai kopi Arab adalah spesies dari genus Coffea. Spesies ini diyakini sebagai spesies kopi pertama yang dibudidayakan, dan merupakan kultivar dominan."
            android:textColor="#000000"
            android:textSize="16sp" />

        <Button
            android:id="@+id/detail_button_keranjang"
            android:layout_width="325dp"
            android:layout_height="53dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="34dp"
            android:layout_marginTop="710dp"
            android:backgroundTint="@color/coklat_soft"
            android:text="Tambah ke Keranjang"
            android:textAllCaps="false"
            android:textColor="#FFFFFF"
            android:textSize="16dp"
            android:fontFamily="@font/nbold" />
    </FrameLayout>
</RelativeLayout>